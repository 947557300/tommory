.wish-tab {
  width: 100%;
  z-index: 99;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  background-color: #FFFFFF;
  position: fixed;
  top: 0rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
}
.wish-tab .tab-show, .wish-tab .tab-show-active {
    width: 45%;
    height: 80rpx;
    text-align: center;
    font-size: 26rpx;
    line-height: 80rpx;
}
.wish-tab .tab-show-active {
    color: #ea986c;
    border-bottom: 2rpx solid #ea986c;
}
._ul {
  list-style: none;
  padding-top: 80rpx;
  width: 100%;
  -webkit-padding-start: 0rpx;
          padding-inline-start: 0rpx;
}
._ul ._li {
    padding: 30rpx;
    margin-top: 10rpx;
    background-color: #FFFFFF;
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    width: 100%;
    position: relative;
    border-bottom: 1rpx solid #ececec;
    border-top: 1rpx solid #ececec;
    height: 140rpx;
}
._ul ._li image {
      width: 150rpx;
      height: 150rpx;
      margin-right: 20rpx;
}
._ul ._li .box {
      width: 100%;
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
}
._ul ._li .box .text_box text {
        display: block;
        font-size: 30rpx;
}
._ul ._li .box .text_box .brand {
        color: #333333;
}
._ul ._li .box .text_box .name {
        color: #999999;
        display: inline-block;
}
._ul ._li .box .text_box .money {
        color: #ea986c;
        margin-top: 10rpx;
}
._ul ._li .butn {
      position: absolute;
      top: 70rpx;
      right: 80rpx;
}
._ul ._li .butn image {
        width: 50rpx;
        height: 50rpx;
}
._ul .sgoodslist .text_box .name-box {
    margin-top: 30rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
}
._ul .sgoodslist .text_box .name-box text {
      font-size: 25rpx;
}
._ul .sgoodslist .text_box .name-box .brand {
      color: #ea986c !important;
      margin-right: 20rpx;
}
._ul .sgoodslist .text_box .name-box .name {
      color: #333333 !important;
}
._ul .sgoodslist .text_box .money {
    color: #333333 !important;
    font-size: 32rpx;
    font-weight: bold;
}

