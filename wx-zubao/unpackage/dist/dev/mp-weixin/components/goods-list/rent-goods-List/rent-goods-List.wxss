page {
  -webkit-tap-highlight-color: transparent;
}
._ul {
  width: 100%;
  padding-top: 23%;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-wrap: wrap;
      -ms-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
      -ms-flex-pack: justify;
          justify-content: space-between;
  list-style: none;
  -webkit-padding-start: 0px;
          padding-inline-start: 0px;
}
._ul ._li {
    width: 49.8%;
    position: relative;
    background-color: #FFFFFF;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
    border-right: 1rpx solid #ececec;
    border-left: 1rpx solid #ececec;
    border-bottom: 1rpx solid #ececec;
    padding: 30rpx;
}
._ul ._li .content {
      width: 100%;
      text-align: center;
}
._ul ._li .content image {
        width: 100%;
}
._ul ._li .content .goosname {
        margin-bottom: 15rpx;
}
._ul ._li .content .goosname text {
          font-size: 32rpx;
          font-family: Microsoft YaHei;
          color: #333333;
          font-weight: bold;
}
._ul ._li .content .money {
        font-size: 30rpx;
        color: #ea986c;
}
._ul ._li .content .buy {
        position: absolute;
        top: 0rpx;
        width: 80rpx;
        height: 80rpx;
        line-height: 80rpx;
        text-align: center;
        background-color: #333;
        opacity: 0.3;
        border-radius: 50%;
        right: 0rpx;
        font-size: 15rpx;
        color: #FFFFFF;
}
._ul .collect {
    position: absolute;
    top: 30rpx;
    right: 30rpx;
}
._ul .collect image {
      width: 50rpx;
      height: 50rpx;
}

